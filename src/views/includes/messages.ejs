<% if(errors.length > 0) { %>

    <div class="d-flex flex-row justify-content-center mt-3">
        <div>
            <div class="alert alert-danger">
                <% errors.forEach(erro=> { %>
                    <%= erro %><br>
                        <% }); %>
            </div>
        </div>
    </div>

    <% } %>

<% if(success.length > 0) { %>

    <div class="d-flex flex-row justify-content-center mt-3">
        <div>
            <div class="alert alert-success">
                <% success.forEach(success=> { %>
                    <%= success %><br>
                        <% }); %>
            </div>
        </div>
    </div>

    <% } %>
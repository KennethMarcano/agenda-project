<%- include('includes/head') %>
    <%- include('includes/nav') %>

        <div class="container">
            <%- include('includes/messages'); %>
                <div class="row justify-content-center">
                    <div class="col-lg-2"></div>
                    <div class="col-lg-8 my-1">
                        <h1 class="text-center">Agenda</h1>
                        <p class="text-center lead">Seus contatos estao abaixo</p>

                        <% if(contatos.length> 0) { %>
                            <div class="responsive-table">

                                <table class="table my-3">
                                    <tr>
                                        <td>NOME</td>
                                        <td>SOBRENOME</td>
                                        <td>TELEFONE</td>
                                        <td>E-MAIL</td>
                                    </tr>
                                    <% for(let contato of contatos) {%>
                                        <tr>
                                            <td>
                                                <%= contato.nome %>
                                            </td>
                                            <td>
                                                <%= contato.sobrenome %>
                                            </td>
                                            <td>
                                                <%= contato.telefone %>
                                            </td>
                                            <td>
                                                <%= contato.email %>
                                            </td>
                                            <td><a href="/contato/index/<%= contato._id %>">Editar</a></td>
                                            <td><a class="text-danger"
                                                    href="/contato/delete/<%= contato._id %>">Apagar</a></td>
                                        </tr>
                                        <% } %>
                                </table>
                            </div>
                            <% } else { %>
                                <p class="text-center lead">Nao existem contatos na sua agenda.</p>
                                <% } %>
                    </div>

                    <div class="col-lg-2"></div>

                </div>
        </div>


        <%- include('includes/footer') %>
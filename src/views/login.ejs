<%- include('includes/head') %>
  <%- include('includes/nav') %>

    <div class="container text-center">
      <div class="row justify-content-center">
        <div class="col-lg-8 my-3">
          <h1 id="title" class="text-center">Entrar</h1>
          <p id="text" class="text-center lead">Faça login ou crie sua conta abaixo</p>
          <button id="showTypeForm" type="button" class="btn btn-primary">Criar conta</button>
        </div>

        <div class="row col-lg-6 justify-content-center text-center">
            <div id="div-cadastro" class="d-none col-lg-7">
              <h4>Faça seu cadastro</h4>
              <p>Se você ainda não tem conta:</p>
              <form class="form-cadastro" action="/login/register" method="POST">
                <input type="hidden" name="_csrf" value=<%=csrfToken %>>
                <div class="mb-3 div-email">
                  <label>Seu email</label>
                  <input type="email" class="form-control" name="email">
                  <div class="msj-error"></div>
                </div>

                <div class="mb-3 div-password">
                  <label>Sua senha</label>
                  <input type="password" class="form-control" name="password">
                  <div class="msj-error"></div>
                </div>

                <button type="submit" class="btn btn-primary">Criar conta</button>
              </form>

            </div>

            <div id="div-login" class="col-lg-7">

              <h4>Faça seu login</h4>
              <p>Se você já tem uma conta:</p>

              <form class="form-login" action="/login/login" method="POST">
                <input type="hidden" name="_csrf" value=<%=csrfToken %>>
                <div class="mb-3 div-email">
                  <label>Seu email</label>
                  <input type="email" class="form-control" name="email">
                  <div class="msj-error"></div>
                </div>

                <div class="mb-3 div-password">
                  <label>Sua senha</label>
                  <input type="password" class="form-control" name="password">
                  <div class="msj-error"></div>
                </div>


                <button type="submit" class="btn btn-primary">Entrar</button>
              </form>

            </div>

        </div>
      </div>
    </div>
    <%- include('includes/messages'); %>

    <%- include('includes/footer') %>